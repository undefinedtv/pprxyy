{
  "functions": {
    "api/proxy.ts": {
      "runtime": "edge"
    }
  },
  "rewrites": [
    { "source": "/proxy", "destination": "/api/proxy" }
  ],
  "headers": [
    {
      "source": "/proxy",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, HEAD, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "*" }
      ]
    }
  ]
}
